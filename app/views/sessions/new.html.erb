<div id="legend">
  <h2><legend class="">User Login</legend></h2>
</div>
<form class="form-horizontal" action="/sessions" method="POST">
  <fieldset>


    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="email">E-mail:</label>
      <div class="controls">
        <input type="text" id="email" name="user[email]" placeholder="Email" class="input-xlarge">

      </div>
    </div>

    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password:</label>
      <div class="controls">
        <input type="password" id="password" name="user[password]" placeholder="" class="input-xlarge">
      </div>
    </div>

    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

      <!-- Button -->
      <div class="controls">
        <button class="btn btn-success">Log In</button>
      </div>
    </div>
  </fieldset>
</form>
