<div id="legend">
  <h2><legend class="">New User Registration</legend></h2>
</div>
<form class="form-horizontal" action="/users" method="POST">
  <fieldset>

    <div class="control-group">
      <!-- Username -->
      <label class="control-label"  for="username">Username</label>
      <div class="controls">
        <input type="text" id="username" name="user[username]" placeholder="Username" class="input-xlarge">
        <h6><p class="help-block">Username can contain any letters or numbers, without spaces</p></h6>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="email">E-mail</label>
      <div class="controls">
        <input type="text" id="email" name="user[email]" placeholder="Email" class="input-xlarge">
        <p class="help-block">Please provide your E-mail</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type="password" id="password" name="user[password]" placeholder="" class="input-xlarge">
        <p class="help-block">Password should be at least 4 characters</p>
      </div>
    </div>

    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <button class="btn btn-success">Register</button>
      </div>
    </div>
  </fieldset>
</form>
